<?xml version="1.0" encoding="utf-8" ?>

<TabbedPage
    x:Class="Sparky.TrakApp.Views.Games.GameUserEntriesTabbedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:extensions="clr-namespace:Sparky.TrakApp.Extensions;assembly=Sparky.TrakApp"
    xmlns:games="clr-namespace:Sparky.TrakApp.Views.Games;assembly=Sparky.TrakApp"
    xmlns:vms="clr-namespace:Sparky.TrakApp.ViewModel.Games;assembly=Sparky.TrakApp.ViewModel"
    Title="Games"
    x:DataType="vms:GameUserEntriesTabbedViewModel"
    BarBackgroundColor="{StaticResource TrakPrimaryBlue}">
    <TabbedPage.Children>
        <games:GameUserEntryListPage Title="{extensions:Translate Backlog}" BindingContext="{Binding BacklogViewModel}" />
        <games:GameUserEntryListPage Title="{extensions:Translate Playing}" BindingContext="{Binding InProgressViewModel}" />
        <games:GameUserEntryListPage Title="{extensions:Translate Done}" BindingContext="{Binding CompletedViewModel}" />
        <games:GameUserEntryListPage Title="{extensions:Translate Dropped}" BindingContext="{Binding DroppedViewModel}" />
    </TabbedPage.Children>
</TabbedPage>